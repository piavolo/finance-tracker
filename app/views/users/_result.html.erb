<% if @stock %>
  <div class="card card-header results-block">
      <strong>Symbol: </strong> <%= @stock.ticker %>
      <strong>Name: </strong> <%= @stock.name %>
      <strong>Price: </strong> <%= @stock.last_price %>
      <% if current_user.can_track_stock?(@stock.ticker) %>
        <!-- <%= link_to "Add to portfolio", user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-success", method: :post %> -->
        <%= form_with url: user_stocks_path(user: current_user, ticker: @stock.ticker), method: :post, local: false do %>
          <%= submit_tag "Add to portfolio", class: "btn btn-success" %>
        <% end %>
      <% else %>
        <span class="badge badge-secondary">
          You are already tracking 
          <% unless current_user.under_stock_limit? %>
            10 stocks
          <% end %>
          <% if current_user.stock_already_tracked?(@stock.ticker) %>
            this stock
          <% end %>
        </span>
      <% end %>
  </div>
<% elsif alert %>
  <div class="alert alert-warning results-block">
    <%= alert %>
  </div>
<% elsif notice %>
  <div class="alert alert-success results-block">
    <%= notice %>
  </div>
<% end %>